<div class="container">
<div class="card-product">
  <% if @pokemon.photo.attached? %>
    <%= cl_image_tag @pokemon.photo.key%>
    <% else %>
    <%= image_tag("https://source.unsplash.com/random", alt:"image") %>
  <% end %>
  <div class="card-infos">
      <ul style="list-style-type: none">
        <li>Name: <%= @pokemon.name %></li>
        <li>Type: <%= @pokemon.type_pokemon %></li>
        <li>Description: <%= @pokemon.description %></li>
        <li>Level: <%= @pokemon.level %></li>
      </ul>
  </div>
</div>

<div class="card-booking">
<% if current_user.id != @pokemon.user_id %>
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <%= simple_form_for [@pokemon, @transaction] do |f| %>
          <%= f.input :start_date, as: :date, placeholder: "Start Date"%>
          <%= f.input :end_date, as: :date,  placeholder: "End Date"%>
          <%= f.submit 'Rent Pokemon', class: 'btn btn-primary'%>
        <% end %>
  </div>
<% end %>
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
<p><%= link_to "Back to overview", pokemons_path %></p>
</div>
