<div>
    <%= simple.form_for([@pokemon, @pokemon.transactions.new]) do |f| %>
    <div class="row">
        <div class="col-md-6">
            <label>Start from</label>
            <%= f.input :start_date, readonly: true, placeholder: "Start Date", class: "form-control datepicker" %>
        </div>
        <div class="col-md-6">
            <label>Until</label>
            <%= f.input :end_date, readonly: true, placeholder: "End Date", class: "form-control datepicker", disabled: true %>
        </div>
    </div>
    <h4 class="message-alert text-center"><span id="message"></span></h4>
    <div id="preview" style="display: none;">
        <table class="reservation-table">
            <tbody>
                <tr>
                    <td>Pokemon</td>
                    <td class="text-right">$<%= @pokemon.name %></td>
                    <td class="text-right">$<%= @pokemon.type_pokemon %></td>
                    <td class="text-right">$<%= @pokemon.description %></td>
                    <td class="text-right">$<%= @pokemon.level %></td>
                </tr>
                <tr>
                    <td>Day(s)</td>
                    <td class="text-right"> ??? <span id="transaction_days"></span></td>
                </tr>
            </tbody>
        </table>
    </div>
    <br />
    <%= f.submit "Book Now", class: "btn btn-primary" %>
<% end %>
</div>
